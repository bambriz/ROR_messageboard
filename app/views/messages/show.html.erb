<div class="col-md-8 col-md-offset-2">
<div class="message-show">
        <h2><%= @message.title %></h2>
        <p class="message-posted-by">Posted by <%= @message.user.email %> <%= time_ago_in_words(@message.created_at) %> ago</p>
        <p class="message-desc"><%= @message.description %></p>


        <h3>Comments:</h3>
        <%= render @message.comments %>
        <% if user_signed_in? %>
            <h3 class="reply-to-msg">Reply to Message:</h3>
            <%= render 'comments/form' %>
        <% end %>
        <br/>
        <div class="links btn-group">
            <%= link_to "Back", root_path , class: "btn btn-primary"%>

            <% if user_signed_in? %>


                <% if @message.user_id == current_user.id %>
                    <%= link_to "Edit", edit_message_path(@message), class: "btn btn-info" %>
                    
                    <%= link_to "Delete", message_path(@message), method: :delete, data: { confirm: "Are you sure that you wish to delete this message?"} ,class: "btn btn-danger"%>

                <% end %>
            <% end %>
        </div>
    </div>
</div>